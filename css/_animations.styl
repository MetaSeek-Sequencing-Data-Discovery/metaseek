/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transition all 0.6s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.order-enter-active
    max-height 60px
    padding 2rem 0 !important
    background white
    transform translateX(0)

.order-leave
  transition all 0.6s
  transform translateX(0)
  &.order-leave-active
    max-height 0
    padding 0
    transform translateX(120%)


.count-enter
  transition all .25s
  transform translateY(100%) // start it just off screen
  &.count-enter-active
    transform translateY(0)

.count-leave
  transition all .25s
  position absolute
  left 0
  bottom 0
  transform translateY(0) // start it where it is
  &.count-leave-active
    transform translateY(-100%) // move it up one unit
